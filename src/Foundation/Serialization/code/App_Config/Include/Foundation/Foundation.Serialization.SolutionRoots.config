<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
	<sitecore>
		<unicorn>
			<configurations>
				<configuration name="Foundation.Serialization.SolutionRoots" description="Root items" extends="Foundation.Serialization.Base">
					<targetDataStore physicalRootPath="$(sourceFolder)\$(layer)\$(module)\serialization" useDataCache="false" singleInstance="true"/>
					<predicate>
						<include name="ClothingCompany.Foundation.Serialization.FeatureTemplates" database="master" path="/sitecore/templates/Feature">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FoundationTemplates" database="master" path="/sitecore/templates/Foundation">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.ProjectTemplates" database="master" path="/sitecore/templates/Project">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FeatureRenderings" database="master" path="/sitecore/layout/renderings/Feature">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FoundationRenderings" database="master" path="/sitecore/layout/renderings/Foundation">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.ProjectRenderings" database="master" path="/sitecore/layout/renderings/Project">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FeatureLayouts" database="master" path="/sitecore/layout/layouts/Feature">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FoundationLayouts" database="master" path="/sitecore/layout/layouts/Foundation">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.ProjectLayouts" database="master" path="/sitecore/layout/layouts/Project">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FeaturePlaceholderSettings" database="master" path="/sitecore/layout/placeholder settings/Feature">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.FoundationPlaceholderSettings" database="master" path="/sitecore/layout/placeholder settings/Foundation">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.ProjectPlaceholderSettings" database="master" path="/sitecore/layout/placeholder settings/Project">
							<exclude children="true" />
						</include>
						<include name="ClothingCompany.Foundation.Serialization.ProjectMedia" database="master" path="/sitecore/media library/ClothingCompany">
							<exclude children="true" />
						</include>
					</predicate>
				</configuration>
			</configurations>
		</unicorn>
	</sitecore>
</configuration>