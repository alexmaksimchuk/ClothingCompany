@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model ClothingCompany.Feature.Navigation.Models.NavGroup
@{
    var homeItem = Sitecore.Context.Database.GetItem(Sitecore.Context.Site.StartPath);
}
<nav class="navbar is-light" role="navigation" aria-label="dropdown navigation">
    @foreach (var navItem in Model.NavItems)
    {
        <div class="navbar-item">
            <a class="navbar-link is-arrowless" href="@navItem.Url">
                @Html.Sitecore().Field("__Display Name", navItem.Item, new { DisableWebEdit = true })
            </a>
        </div>
    }
    <div class="navbar-end">
        <div class="navbar-item">
            @Html.Sitecore().Field("Page Title", homeItem, new { DisableWebEdit = true })
        </div>
    </div>
</nav>